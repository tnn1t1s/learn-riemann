; vim: filetype=clojure

(logging/init {:file "riemann.log"})

; Listen on the local interface over TCP (5555), UDP (5555), and websockets
; (5556)
(let [host "127.0.0.1"]
  (tcp-server {:host host})
  (udp-server {:host host})
  (ws-server {:host host}))

; Expire old events from the index every 5 seconds.
(periodically-expire 5)

(let [index (index)]
  (streams
    (default :ttl 60
      ; Index all events immediately.
      index
   
     (where (and (service "threshold") (not (expired? event)))
            ;; over time windows of 3 seconds...
             (fixed-time-window
               3
               (combine folds/mean
                        (where (not (nil? event))
                               (where (> metric 2.0)
                                      ; calls prn only five times per hour (3600 seconds).
                                      (rollup 5 3600 prn)
                                      ; throttle sends on first five and disards the rest
                                      (throttle 5 3600 prn)
                                      ;; take some action e.g. pagerduty, etc.
                                      (with :state "critical" index)))))))))
